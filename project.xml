<?xml version="1.0" encoding="utf-8"?>
<project>
	<!-- NMML reference: https://gist.github.com/1763850 -->
	
	<!-- metadata, make sure 'package' is at least 3 segments (ie. com.mycompany.myproject) -->
	<meta title="ParticuleEditor" package="ParticuleEditor" version="1.0.0" company="Ludovic Bas - www.lugludum.com" />
	
	<!-- output -->
	<app main="Main" file="ParticuleEditor" path="bin" />
	
	<window background="#232323" fps="60" />
	<window width="0" height="0" unless="mobile" allow-high-dpi="true"/>
	<window orientation="landscape" vsync="false" antialiasing="0" if="cpp" />
	
	<!-- classpath, haxe libs -->
	<source path="src" />
	<haxelib name="openfl" />
	<haxelib name="starling" />
	<haxelib name="simplegui" />
	
	<template path="assets/index.html" rename="index.html" />
	
	<!-- assets -->
	<icon path="assets/openfl.svg" />
	<assets path="assets" rename="assets" />
	
	<!-- optimize output
	<haxeflag name="-dce full" /> -->
	
</project>